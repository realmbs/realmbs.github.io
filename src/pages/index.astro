<script>
  // Enhanced form handling with validation and improved UX
  document.addEventListener('DOMContentLoaded', () => {
    const form = document.getElementById('contactFormElement') as HTMLFormElement;
    const submitBtn = document.getElementById('submitBtn') as HTMLButtonElement;
    const btnText = submitBtn.querySelector('.btn-text') as HTMLSpanElement;

    // Form validation
    const validateField = (field: HTMLInputElement | HTMLTextAreaElement) => {
      const formGroup = field.closest('.form-group') as HTMLElement;
      const errorElement = formGroup.querySelector('.form-error') as HTMLElement;
      
      // Remove existing classes
      formGroup.classList.remove('form-group--has-error', 'form-group--has-success');
      errorElement.classList.remove('form-error--visible');
      
      if (field.value.trim() === '' && field.hasAttribute('required')) {
        formGroup.classList.add('form-group--has-error');
        errorElement.classList.add('form-error--visible');
        return false;
      } else if (field.type === 'email' && field.value.trim() !== '') {
        const emailRegex = /^[^\s@]+@[^\s@]+\.[^\s@]+$/;
        if (!emailRegex.test(field.value)) {
          formGroup.classList.add('form-group--has-error');
          errorElement.textContent = 'Please enter a valid email address';
          errorElement.classList.add('form-error--visible');
          return false;
        }
      }
      
      if (field.value.trim() !== '') {
        formGroup.classList.add('form-group--has-success');
      }
      
      return true;
    };

    // Real-time validation
    const inputs = form.querySelectorAll('input, textarea');
    inputs.forEach(input => {
      input.addEventListener('blur', () => validateField(input as HTMLInputElement | HTMLTextAreaElement));
      input.addEventListener('input', () => {
        const formGroup = input.closest('.form-group') as HTMLElement;
        if (formGroup.classList.contains('form-group--has-error')) {
          validateField(input as HTMLInputElement | HTMLTextAreaElement);
        }
      });
    });

    if (form && submitBtn) {
      form.addEventListener('submit', async (e) => {
        e.preventDefault();
        
        // Validate all fields
        let isValid = true;
        inputs.forEach(input => {
          if (!validateField(input as HTMLInputElement | HTMLTextAreaElement)) {
            isValid = false;
          }
        });
        
        if (!isValid) {
          // Scroll to first error
          const firstError = form.querySelector('.form-group--has-error');
          if (firstError) {
            firstError.scrollIntoView({ behavior: 'smooth', block: 'center' });
          }
          return;
        }
        
        // Set loading state
        submitBtn.disabled = true;
        submitBtn.classList.add('btn--loading');
        btnText.textContent = 'Sending';
        
        try {
          const formData = new FormData(form);
          const response = await fetch(form.action, {
            method: 'POST',
            body: formData,
            headers: {
              'Accept': 'application/json'
            }
          });
          
          if (response.ok) {
            // Success state
            submitBtn.classList.remove('btn--loading');
            submitBtn.classList.remove('btn--primary');
            submitBtn.classList.add('btn--success');
            btnText.textContent = 'Message Sent!';
            form.reset();
            
            // Clear form validation states
            inputs.forEach(input => {
              const formGroup = input.closest('.form-group') as HTMLElement;
              formGroup.classList.remove('form-group--has-error', 'form-group--has-success');
              const errorElement = formGroup.querySelector('.form-error') as HTMLElement;
              errorElement.classList.remove('form-error--visible');
            });
            
            // Reset after 3 seconds
            setTimeout(() => {
              submitBtn.disabled = false;
              submitBtn.classList.remove('btn--success');
              submitBtn.classList.add('btn--primary');
              btnText.textContent = 'Send Message';
            }, 3000);
          } else {
            throw new Error('Form submission failed');
          }
        } catch (error) {
          // Error state
          submitBtn.classList.remove('btn--loading');
          submitBtn.classList.remove('btn--primary');
          submitBtn.classList.add('btn--danger');
          btnText.textContent = 'Failed to Send';
          
          // Reset after 3 seconds
          setTimeout(() => {
            submitBtn.disabled = false;
            submitBtn.classList.remove('btn--danger');
            submitBtn.classList.add('btn--primary');
            btnText.textContent = 'Send Message';
          }, 3000);
        }
      });
    }
  });
</script>

